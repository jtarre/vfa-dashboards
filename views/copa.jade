extends layout

block content
	h1= "CoPa Dashboard"
	script(type="text/javascript").
		//D3
		var dataset = [ 5, 10, 15, 20, 25 ];
		d3.select("body").selectAll("div")
			.data(dataset)
			.enter()
			.append("div")
			.attr("class", "bar");
	
	h2= "New Accounts Created This Month"
	div.table-responsive
		table(class="table table-bordered table-hover")
			thead
				tr
					td.col-xs-6= "City"
					td.col-xs-3= "Qty"
			tbody
			each number, city in thisMonth
				tr
					td #{city}
					td #{number}
	
	h2= "Total Accounts Per City"
	div.table-responsive
		table(class="table table-bordered table-hover")
			thead
				tr
					td.col-xs-6= "City"
					td.col-xs-3= "Qty"
			tbody
			each number, city in totalCount
				tr
					td #{city}
					td #{number}
	
	h2= "Total Active Partner Accounts Per City"
	div.table-responsive
		table(class="table table-bordered table-hover")
			thead
				tr
					td.col-xs-6= "City"
					td.col-xs-3= "Qty"
			tbody
			each number, city in partnerCount
				tr
					td #{city}
					td #{number}
	
	h2= "Total Active Potential Accounts Per City"
	div.table-responsive
		table(class="table table-bordered table-hover")
			thead
				tr
					td.col-xs-6= "City"
					td.col-xs-3= "Qty"
			tbody
			each number, city in potentialCount
				tr
					td #{city}
					td #{number}